{
    "name": "slim-catapult",
    "description": "Catapult Code Cchallenge",
    "license": "BSD-3-Clause",
    "type": "project",
    "keywords": ["slim-framework"],
    "config" : {
        "platform": {
           "php": "7.1"
        }
    },
    "authors": [
        {
            "name": "Paulo Goncalves",
            "email": "contact@paulogoncalves.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Controller\\": "app/src/Controller",
            "Model\\": "app/src/Model"
        }
    },
    "require": {
        "php" : ">=7.1",
        "slim/slim": "^3.0",
        "slim/twig-view": "^1.0",
        "illuminate/database": "~5.2",
        "vlucas/valitron": "^1.2",
        "slim/csrf": "^0.3.3",
        "slim/flash": "^0.1.0",
        "nesbot/carbon": "^1.34",
        "robmorgan/phinx": "^0.10.6",
        "fzaninotto/faker": "^1.8",
        "tuupola/slim-jwt-auth": "^3.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5",
        "phpunit/phpunit": "^5.2"
    },
    "scripts": {
        "test": [
            "php vendor/squizlabs/php_codesniffer/scripts/phpcs",
            "php vendor/phpunit/phpunit/phpunit"
        ]
    }
}
